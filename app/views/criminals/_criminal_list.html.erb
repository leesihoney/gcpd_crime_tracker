
<% if criminals.empty? %>
<p class = 'no-data'>There are no <%= state.downcase %> criminals at this time.</p>
<% else %>

<table class="striped highlight">
  <thead>
    <th>Name</th>
    <th>Nickname</th>


    <th class="align_center">Edit</th>
  </thead>
  <% for criminal in criminals %>
    <tr>
      <td><%= link_to criminal.name, criminal_path(criminal) %></td>
      <td><%= criminal.aka %></td>





      <td class="align_center">
        <%= link_to edit_criminal_path(criminal) do %>
            <i class="material-icons">edit</i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate criminals, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<% end %>