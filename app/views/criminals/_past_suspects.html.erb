<div class="card">
    <div class="card-content">
      <% if @past_suspects.empty? %>
      <h5>No past suspects</h5>
      <% else%>
      <span class="card-title">Past Suspects</span>
      <table class="lined">
        <thead>
          <th>Investigation</th>
          <th>Ending</th>
        </thead>
          <% for suspect in @past_suspects %>
            <tr>
              <td>&nbsp;<%= link_to suspect.investigation.title, investigation_path(suspect.investigation) %></td>
              <td>
                <%= suspect.dropped_on.strftime("%m/%d/%y") %>
              </td>
              
            </tr>
          <% end %>
      </table>
      <% end%>

    </div>
  </div>

