<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">    
      <div class="card-content">
        <span class="card-title"><%= type_of_form %></span>
        <%= simple_form_for(object) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= render partial: "#{fields}", locals: { f: f } %>
          </div>
        </div>
      </div>
    </div>
      <div class="buttons-grid">
        <div class="form-actions buttons-group">
          <%= link_to 'Back', :back, :class => 'waves-effect waves-light btn btn-secondary' %>
          <%= f.button :submit, :class => 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
