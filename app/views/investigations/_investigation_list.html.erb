<% if investigations.empty? %>
  <p class = 'no-data'>There are no <%= state.downcase %> investigations at this time.</p>
<% else %>
  <div class="card">
    <div class="card-content">
      <span class="card-title"><%= state.capitalize %> Cases </span>
      <table class="lined">
        <thead>
          <th>Title</th>
          <th>Date <%= state %></th>
        </thead>
        <% for investigation in investigations %>
          <tr>
            <td><%= link_to investigation.title, investigation_path(investigation) %></td>
            <td><%= display_date(investigation, state) %></td>
          </tr>
        <% end %>
      </table>
      <%= will_paginate investigations, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
    </div>
  </div>
<% end%>
