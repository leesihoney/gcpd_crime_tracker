<% if @closed_unsolved.empty? %>
  <p class = 'no-data'>There are no recently closed, unsolved cases at this time.</p>
<% else%>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Recently Closed, Unsolved Cases</span>
      <table class="line">
        <thead>
          <th>Case</th>
          <th>Date Closed</th>
        </thead>
          <% for investigation in @closed_unsolved %>
            <tr>
              <td>&nbsp;<%= link_to investigation.title, investigation_path(investigation) %></td>
              <td><%= investigation.date_closed.strftime("%m/%d/%y") %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
<% end%>
<br />