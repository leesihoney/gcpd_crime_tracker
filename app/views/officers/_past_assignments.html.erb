<div class = 'card'>
  <div class = 'card-content'>
    <span class = 'card-title'> Past Assignments </span>
    <% if @past_assignments.empty? %>
    <p class = 'no-data-small' > No Past Assignments </p>
    <% else %>
    <table class="lined">
        <thead>
          <th>Case</th>
          <th>Ending</th>
        </thead>
        <% for assignment in @past_assignments %>
          <tr>
            <td>&nbsp;<%= link_to assignment.investigation.title, investigation_path(assignment.investigation) %></td>
            <td>
              <%= assignment.end_date.strftime("%m/%d/%y") %>
            </td>
          </tr>
        <% end %>
    </table>
    <% end %>
  </div>
</div>