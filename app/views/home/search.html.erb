<div class = 'container'>
    <div class = 'vue-section'>
        <h5>Search result for term <em>'<%= @query %>'</em> resulted in <%= pluralize(@total_hits, 'hit') %></h5>
        <p class="supertiny">&nbsp;</p>

        <% unless @investigations_result.empty? %>
        <p><em><strong>Investigations matching term '<%= @query %>'</strong></em></p>
        <ul>
            <% for investigation in @investigations_result do %>
            <li><%= link_to investigation.title, investigation_path(investigation) %></li>
            <% end %>
        </ul>
        <p class="smtext">&nbsp;</p>
        <% end %>

        <% unless @officers_result.empty? %>
        <p><em><strong>Officers  matching term '<%= @query %>'</strong></em></p>
        <ul>
            <% for officer in @officers_result do %>
            <li><%= link_to officer.name, officer_path(officer) %></li>
            <% end %>
        </ul>
        <p class="smtext">&nbsp;</p>
        <% end %>

        <% unless @criminals_result.empty? %>
        <p><em><strong>Criminals matching term '<%= @query %>'</strong></em></p>
        <ul>
            <% for criminal in @criminals_result do %>
            <li><%= link_to criminal.name, criminal_path(criminal) %></li>
            <% end %>
        </ul>
        <p class="smtext">&nbsp;</p>
        <% end %>

    </div>
</div>



