<div class="row">
  <div class="col s8 offset-s2">
    <div class = 'card'>
      <div class = 'card-content'>
        <span class = 'card-title'> New Investigation Note for <%= @investigation.title %>: </span>
        <span class = 'card-writer'> Written By <%= @officer.proper_name %>: </span>
        <%= simple_form_for(@note)  do |f|  %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= f.input :investigation_id, as: :hidden, input_html: { value: @investigation.id } %>
              <%= f.input :officer_id, as: :hidden, input_html: { value: @officer.id } %>
              <%= f.input :content %>
            </div>
          </div>
          <div class="row">
            <div class="form-actions col s8">
              <%= f.button :submit, :class => "btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>